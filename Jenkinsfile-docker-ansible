pipeline {
  agent none

  stages {
    stage('Checkout') {
      agent any
      steps {
        git branch: 'main', url: 'https://github.com/scvit/source-maven-java-spring-hello-webapp.git'
      }
    }
    stage('Build') {
      agent {
        docker { image 'maven:3-openjdk-11' }
      }
      steps {
        sh 'mvn clean package -DskipTests=true'
      }
    }
    stage('Test') {
      agent {
        docker { image 'maven:3-openjdk-11' }
      }
      steps {
        sh 'mvn test'
      }
    }
    stage('Build Docker Image') {
      agent any
      steps {
        sh 'docker image build -t ansible_pipeline .'
      }
    }
    stage('Tag Docker Image') {
      agent any
      steps {
        sh 'docker image tag myhello mwjo/ansible_pipeline:$BUILD_NUMBER'
      }
    }
    stage('Publish Docker Image') {
      agent any
      steps {
        withDockerRegistry(credentialsId: 'docker-hub-token', url: 'https://index.docker.io/v1/') {
          sh 'docker image push mwjo/ansible_pipeline:$BUILD_NUMBER'
          sh 'docker image push mwjo/ansible_pipeline:latest'
        }
      }
    }
    stage('Run Docker Container') {
      agent {
        docker { 
          image 'mwjo/jenkins-ansible'
          args '-u 0:0 -e DOCKER_HOST=tcp://172.31.22.243:2375'
        }
      }
      steps {
        ansiblePlaybook(playbook: 'docker-container-deploy.yaml')
      }
    }
  }
}
